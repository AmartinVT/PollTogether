<section>
  <header>
    Register
  </header>
  <section>
    <section>
        <form class="form register-form">
            <section class="user-input">
                <label>Username: </label>
                <input class="form-input" id="username-register" required />
            </section>
            <section class="user-input">
                <label>Email: </label>
                <input class="form-input" id="email-register" required />
            </section>
            <section class="user-input">
                <label>Password: </label>
                <input class="form-input" type="password" id="password-register" required minlength="8" />
            </section>
            <section class="user-input">
                <button type="submit">Register</button>
            </section>
        </form>
    </section>
  </section>
</section>
